    "baseUrl": ".",
    "paths": {
      "@common/*": ["./*"]
    },

    "lib": ["ES2023"],
    "target": "ES2022",

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo"
  },
  "include": ["src", "rollup.config.ts"]
}
